@model Actor

@{
    ViewData["Title"] = "Details of the actor";
}

<div class="row text">
    <div class="col-md-8 offset-md-2">
         <p>
             <h1>Details of the actor</h1>
         </p>
         <div class="row">
                <div class="col-md-8 offset-md-2">
                  <div asp-validation-summary="ModelOnly" class="control-label"></div>

                  <div class="form-group text-center">
                    <img id="ProfilePicturePreview" /> 
                  </div>
                  <div class="form-group">
                      <label asp-for="ProfilePictureUrl" class="control-label">Profile Picture</label>
                      <input asp-for="ProfilePictureUrl" class="form-control" readonly/>
                  </div>
                  <div class="form-group">
                      <label asp-for="FullName" class="control-label"></label>
                      <input asp-for="FullName" class="form-control" readonly/>
                  </div>
                  <div class="form-group">
                      <label asp-for="Bio" class="control-label">Biography</label>
                      <input asp-for="Bio" class="form-control" readonly/>
                  </div>
                  <div class="form-group">
                      <a class="btn btn-outline-secondary float-right" asp-route-id="@Model.Id" asp-action="Edit">Edit</a> 
                      <a class="btn btn-outline-secondary" asp-action="Index">Show All</a> 
                  </div>
             </div>
         </div>
    </div>
</div>

@section Scripts{
    <script>
        $("#ProfilePictureUrl").on("change", function(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
} 